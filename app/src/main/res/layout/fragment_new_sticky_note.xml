<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@drawable/custom_scrollbar_thumb"
    tools:context=".ui.fragments.NewStickyNoteFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp">
    </Space>
    <EditText
        android:id="@+id/myNote"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="start"
        android:padding="20dp"
        android:background="@drawable/note_background"
        android:textColor="@color/appColor1"
        android:textSize="18dp"
        android:textColorHint="@color/appColor1"
        android:hint="What are you thinking..ðŸ¤”"
       />

    <TextView
        android:id="@+id/noteSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="10dp"
        android:textColor="@color/appColor2"
        android:textStyle="bold"
        android:text="150" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp">
    </Space>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/backgroundColorRecycler"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/background_color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_marginEnd="5dp"
        android:shadowColor="@color/black"
        android:layout_marginStart="5dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Sticky Note Color" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </Space>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fontColorRecycler"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/font_color_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:background="@drawable/button_shape"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:shadowColor="@color/black"
        android:textColor="@color/white"
        android:text="Font Color" />
    </FrameLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp">
    </Space>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:visibility="gone"
        android:background="@drawable/button_shape"
        android:layout_marginEnd="5dp"
        android:shadowColor="@color/black"
        android:layout_marginStart="5dp"
        android:textColor="@color/white"
        android:text="Save" />
    </LinearLayout>
</ScrollView>